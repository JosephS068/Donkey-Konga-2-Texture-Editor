<Window x:Class="NutEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NutEditor" Height="800" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Open Save Nut Export -->
            <RowDefinition Height="Auto"/>
            <!-- Replace Image -->
            <RowDefinition Height="Auto"/>
            <!-- Next/Previous -->
            <RowDefinition Height="Auto"/>
            <!-- Image Index -->
            <RowDefinition Height="*"/>
            <!-- Image -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Open" Width="96" Height="25" Click="Open_Nut_File" HorizontalAlignment="Left" Margin="0,0,10,0"/>
            <Button x:Name="Save" Content="Save Nut File" Width="96" Height="25" Click="Save_Click" Margin="0,0,10,0"/>
            <Button x:Name="Export" Content="Export To PNG" Width="96" Height="25" Click="Export_Click" Margin="0,0,10,0" HorizontalAlignment="Left"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,40,0,0">
            <Button x:Name="Replace" Content="Replace Image" Width="96" Height="25" Click="Replace_Click"/>
        </StackPanel>


        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Name="Previous" Content="Previous" Width="96" Height="25" Click="Previous_Click" Margin="0,0,10,0"/>
            <Button Name="Next" Content="Next" Width="96" Height="25" Click="Next_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox Name="ImageIndexInput" Width="200" Height="25" Margin="0,0,0,0" HorizontalAlignment="Left" KeyDown="Image_Index_Change"/>
        </StackPanel>

        <Image Grid.Row="5" Name="ImageDisplay" Stretch="Uniform" Margin="0,10,0,0"/>
    </Grid>
</Window>
